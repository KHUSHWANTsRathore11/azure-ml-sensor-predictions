# Azure ML Environment Configuration
# Semantic versioning: MAJOR.MINOR.PATCH

name: sensor-forecasting-env
version: "1.0.0"
description: "TensorFlow environment for time series forecasting"

channels:
  - conda-forge
  - defaults

dependencies:
  - python=3.9
  - pip=23.0
  
  # Core ML libraries
  - numpy=1.24.3
  - pandas=2.0.3
  - scikit-learn=1.3.0
  
  # TensorFlow
  - tensorflow=2.13.0
  
  # Azure ML SDK v2
  - pip:
    - azure-ai-ml==1.12.0
    - azure-identity==1.15.0
    - azureml-mlflow==1.53.0
    - mlflow==2.9.0
    
    # Data processing
    - delta-spark==2.4.0
    - pyspark==3.4.1
    
    # Monitoring
    - opencensus-ext-azure==1.1.9
    - azure-monitor-opentelemetry==1.2.0
    
    # Utilities
    - pyyaml==6.0.1
    - joblib==1.3.2
    - pyarrow==14.0.1
